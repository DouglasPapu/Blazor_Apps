@inject ISoundPlayer SoundPlayer


<div id="@PadModel.Id" class="pad" @onclick="OnPadClicked">
     <h4>@PadModel.soundName</h4>
     <h5>@PadModel.Key</h5>

</div>

@code {

    [Parameter]
    public PadModel PadModel { get; set; }

    private async void OnPadClicked()
    {
        if (PadModel == null)
            return;
        await SoundPlayer.Play(PadModel.soundLocation, PadModel.Id);

    }

}
